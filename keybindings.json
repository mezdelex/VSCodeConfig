[
    // Git
    {
        "key": "ctrl+shift+g",
        "command": "workbench.view.scm",
        "when": "workbench.scm.active && !gitlens:disabled && config.gitlens.keymap == 'chorded'"
    },
    // Movement
    {
        "key": "ctrl+up",
        "command": "cursorMove",
        "when": "editorTextFocus",
        "args": {
            "to": "up",
            "value": 5
        }
    },
    {
        "key": "ctrl+down",
        "command": "cursorMove",
        "when": "editorTextFocus",
        "args": {
            "to": "down",
            "value": 5
        }
    },
    // Select
    {
        "key": "ctrl+shift+up",
        "command": "cursorMove",
        "when": "editorTextFocus",
        "args": {
            "to": "up",
            "value": 5,
            "select": true
        }
    },
    {
        "key": "ctrl+shift+down",
        "command": "cursorMove",
        "when": "editorTextFocus",
        "args": {
            "to": "down",
            "value": 5,
            "select": true
        }
    },
    // View
    {
        "key": "ctrl+0",
        "command": "workbench.action.zoomReset"
    },
    {
        "key": "alt+pageup",
        "command": "workbench.action.increaseViewSize"
    },
    {
        "key": "alt+pagedown",
        "command": "workbench.action.decreaseViewSize"
    }
]